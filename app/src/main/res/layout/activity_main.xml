<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5DC">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gra w kości. Autor: Mateusz Ostróżka"
        android:textSize="24dp"
        android:background="#A52A2A"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <Button
        android:id="@+id/RollDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rzuć kościami"
        android:background="#D2691E"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center" >

        <TextView
            android:id="@+id/textNumber1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textNumber2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textNumber3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textNumber4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="?"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textNumber5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="9dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="?"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/RollScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik tego losowania: 0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/GameScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynik gry: 0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/RollCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Liczba rzutów: 0"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resetuj wynik"
        android:background="#D2691E"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />

</LinearLayout>